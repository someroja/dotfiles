{
  "workbench.colorTheme": "GitHub Light",
  "editor.fontFamily": "SF Mono, IBM Plex Mono, Monaco, Cascadia Mono, Consolas, monospace",
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 16,
  "debug.console.fontSize": 16,
  "editor.fontLigatures": false,
  "editor.cursorBlinking": "solid",
  "editor.wordWrap": "off",
  "[plaintext]": {
    "editor.wordWrap": "on"
  },
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.renderWhitespace": "selection",
  "editor.formatOnSave": true,
  "editor.codeLens": false,
  "explorer.openEditors.visible": 0,
  "workbench.editor.tabSizing": "shrink",
  "files.exclude": {
    "**/node_modules": true
  },
  "[javascript][javascriptreact][typescript][typescriptreact][html][css][scss][less][json][jsonc][graphql][markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.lineNumbers": "relative",
  "vim.useSystemClipboard": true,
  "vim.leader": ",",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Space>"],
      "commands": ["whichkey.show"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<Space>"],
      "commands": ["whichkey.show"]
    }
  ],
  "whichkey.bindings": [
    {
      "key": " ",
      "name": "Quick open",
      "type": "command",
      "command": "workbench.action.quickOpen"
    },
    {
      "key": ",",
      "name": "Commands",
      "type": "command",
      "command": "workbench.action.showCommands"
    },
    {
      "key": ".",
      "name": "Context menu",
      "type": "command",
      "command": "editor.action.showContextMenu"
    },
    {
      "key": "s",
      "name": "Search",
      "type": "command",
      "command": "workbench.action.findInFiles"
    },
    {
      "key": "d",
      "name": "Go to definition",
      "type": "command",
      "command": "editor.action.revealDefinition"
    },
    {
      "key": "D",
      "name": "Go to references",
      "type": "command",
      "command": "editor.action.goToReferences"
    },
    {
      "key": "i",
      "name": "Go to implementation",
      "type": "command",
      "command": "editor.action.goToImplementation"
    },
    {
      "key": "t",
      "name": "Go to type definition",
      "type": "command",
      "command": "editor.action.goToTypeDefinition"
    },
    {
      "key": "f",
      "name": "Format document",
      "type": "command",
      "command": "editor.action.formatDocument"
    },
    {
      "key": "o",
      "name": "Organize imports",
      "type": "command",
      "command": "editor.action.organizeImports"
    },
    {
      "key": "r",
      "name": "Refactor",
      "type": "command",
      "command": "editor.action.refactor"
    },
    {
      "key": "/",
      "name": "Toggle line comment",
      "type": "command",
      "command": "editor.action.commentLine"
    },
    {
      "key": "b",
      "name": "Toggle breakpoint",
      "type": "command",
      "command": "editor.debug.action.toggleBreakpoint"
    }
  ]
}
